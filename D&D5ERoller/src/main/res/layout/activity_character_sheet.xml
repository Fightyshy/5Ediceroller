<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/choice_grid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="4dp"
    tools:context="com.example.harv0kz.dd5ediceroller.activity.DiceRollingMain"

    grid:layout_behavior="@string/appbar_scrolling_view_behavior"
    grid:alignmentMode="alignBounds"
    grid:columnCount="4"
    grid:rowCount="2"
    grid:rowOrderPreserved="false"
    grid:useDefaultMargins="true">


    <TextView
        android:id="@+id/text_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Character name:"
        android:textColor="@android:color/black"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_column="0"
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal" />

    <EditText
        android:id="@+id/add_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="left"
        android:hint="Enter name"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_column="2"
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/text_character_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Highest class level:"
        android:textColor="@android:color/black"
        grid:layout_columnWeight="1"
        grid:layout_row="1"
        grid:layout_column="0"
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal" />

    <Spinner
        android:id="@+id/text_character_level_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        grid:layout_columnWeight="1"
        grid:layout_row="1"
        grid:layout_column="2"
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal" />

</android.support.v7.widget.GridLayout>